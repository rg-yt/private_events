<%= form_with model: @event do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :description %>
    <%= f.text_area :description %>

    <%= f.label :time %>
    <%= f.time_select :time %>

    <%= f.label :date %>
    <%= f.date_select :date %>

    <%= f.submit %>
<% end %>
